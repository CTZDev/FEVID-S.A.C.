---
interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<button
  type="submit"
  class="btn-form rounded-lg justify-center py-3 flex items-center gap-3 text-sm font-semibold transition-all cursor-pointer bg-clr-shadow w-full
        md:text-base lg:text-lg hover:bg-clr-shadow/85 hover:scale-[1.01]">
  <img src={src} alt={alt} width="32" height="32" />
  <slot name="text-content" />
</button>
