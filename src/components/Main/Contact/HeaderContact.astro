---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---

<div class="form-header text-sm md:text-base lg:text-lg">
  <h2 class="text-xl font-bold mb-4 text-center md:text-2xl">
    {title}
  </h2>
  <p class="text-gray-700 mb-4 text-center leading-relaxed">
    {text}
  </p>
</div>
