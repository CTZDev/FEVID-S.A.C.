---
interface Props {
  title: string;
  source: string;
  message: string;
  className: string;
  contentText: string;
}

const { title, source, message, className, contentText } = Astro.props;
---

<article
  class={`card text-center max-w-96 px-6 py-9 m-auto border rounded-xl text-pretty ${className}`}>
  <header>
    <h3 class="text-base font-medium pb-4 md:text-lg">
      {title}
    </h3>
  </header>
  <div class="content">
    <video width="120" height="120" autoplay loop muted class="mx-auto">
      <source src={source} type="video/webm" />
      {message}
    </video>
    <p>
      {contentText}
    </p>
  </div>
</article>

<style>
  .card {
    box-shadow:
      -2px 2px 10px #f3f3f3,
      2px -2px 10px #f3f3f3;
  }
</style>
