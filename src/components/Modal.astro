---
interface Props {
  id: string;
  text: string;
}

const { id, text } = Astro.props;
---

<dialog
  id={id}
  class="max-w-[600px] min-w-[350px] absolute top-2/4 left-2/4 transform -translate-x-2/4 -translate-y-2/4">
  <div class="modal-box px-6 py-8">
    <h3 class="font-bold text-lg mb-4">COTIZACIÃ“N POR EMAIL</h3>
    <p class="py-5">
      {text}
    </p>
    <div class="modal-body">
      <h4 class="font-bold">Correos Corporativos</h4>
      <p class="flex pt-2 gap-2">
        <img src="/check.svg" alt="Check Email Enterprise" />
        ventas@fevidsac.com
      </p>
      <p class="flex gap-2">
        <img src="/check.svg" alt="Check Gmail" />
        fevidsac@gmail.com
      </p>
      <p class="flex gap-2">
        <img src="/check.svg" alt="Check Email" />
        fevidsac@hotmail.com
      </p>
    </div>
    <div class="modal-action">
      <form method="dialog" class="flex justify-end">
        <!-- if there is a button in form, it will close the modal -->
        <button type="submit" class="px-4 py-2 text-center font-bold bg-red-500 text-white">Cerrar</button>
      </form>
    </div>
  </div>
</dialog>
