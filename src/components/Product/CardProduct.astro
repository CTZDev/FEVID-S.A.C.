---
interface Props {
  img?: string;
  className?: string;
  title: string;
}

const { img, title, className } = Astro.props;
---

<article
  class={`${className} bg-white shadow-md border rounded px-4 py-6 flex flex-col gap-4 overflow-hidden relative`}>
  <div class="card-product-header py-4">
    <img src={img} alt={title} width="100%" class="h-32" loading="lazy" />
  </div>
  <div class="card-product-body">
    <h4 class="text-lg font-bold pb-3">{title}</h4>
    <slot name="card-details" />
  </div>
</article>

<style>
  .card-hidden {
    border: 1px solid red;
  }
</style>
