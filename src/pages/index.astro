---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Main from "../components/Main/Main.astro";
import Dial from "../components/Dial.astro";
---

<Layout
  title="FEVID S.A.C. - Tu mejor opción en la adquisición de productos industriales"
  description=`Venta al por mayor y menor de todo tipo de productos industriales, como:
  Productos eléctricos y gasfíteria, estructuras metálicas, EPP's,
  materiales de construcción, productos forestales, proveeduría,
  ferretería en general, servicios, entre otros.`>
  <Hero />
  <Main />

  <Dial
    href={`https://wa.me/51948575179?text=Hola, Quisiera obtener mayor información del catálogo de sus productos (nacionales e importados)`}
    target="_blank"
    src="/whatsApp.svg"
    alt="Botón interactivo con WhatsApp"
    classPosition="bottom-6 left-3 md:left-6 lg:left-10"
    classImg="w-16 h-16 lg:w-[74px] lg:h-[74px] drop-shadow-[1px_1px_2px_#1da752e6]"
  />

  <Dial
    href="mailto:carlosteranzavaleta@hotmail.com?subject=Solicitud%20de%20informaci%C3%B3n%20del%20cat%C3%A1logo%20de%20productos&body=Hola%2C%20Quisiera%20obtener%20mayor%20informaci%C3%B3n%20del%20cat%C3%A1logo%20de%20sus%20productos%20(nacionales%20e%20importados)"
    src="/message.svg"
    alt="Botón interactivo con hotmail y gmail"
    classPosition="bottom-6 right-3 md:right-6 lg:right-10 rounded-full bg-blue-800 p-4"
    classImg="w-10 h-10 lg:w-[50px] lg:h-[50px] drop-shadow-[1px_1px_2px_#2a6fa8e6]"
  />
</Layout>
